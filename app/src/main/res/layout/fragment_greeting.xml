<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/gray_light_1"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_margin="64dp"
            android:layout_width="0dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/img_logo_profuturo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/greeting_text_view"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:text="@string/greeting_1"
                    android:textColor="@color/blue"
                    android:textSize="32sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/agent_name_text_view"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange_dark"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/greeting_text_view"
                    tools:text="Paco Perez Perez" />

                <com.reintegro.profuturo.app.android.widget.Spinner
                    android:id="@+id/branch_offices_spinner"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="192dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/agent_name_text_view" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:src="@drawable/img_search"
                    app:layout_constraintBottom_toTopOf="@+id/search_of_client_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/branch_offices_spinner" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_of_client_button"
                    android:layout_width="160dp"
                    android:text="@string/search_of_client_1"
                    app:layout_constraintBottom_toTopOf="@+id/get_out_Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Button.Blue" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/version_text_view"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="v1.0" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_out_Button"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/get_out_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Button.White.Borderless" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>