<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="800dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="800dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="@color/blue"
                android:id="@+id/title_linear_layout"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center_vertical"
                    android:id="@+id/title_text_view"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:paddingStart="16dp"
                    android:text="@string/modify_notification_channel_label"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/close_image_view"
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_black"
                    android:tint="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:layout_width="0dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:layout_constraintBottom_toTopOf="@id/positive_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_linear_layout">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp">

                    <com.reintegro.profuturo.app.android.widget.EditText
                        android:id="@+id/cell_phone_edit_text"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        android:maxLength="@integer/max_length_cell_phone"
                        app:inputTextColor="@color/gray_dark_2"
                        app:inputTextSize="14sp"
                        app:labelText="@string/cell_phone_2"
                        app:labelTextColor="@color/black"
                        app:labelTextSize="14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp">

                    <com.reintegro.profuturo.app.android.widget.EditText
                        android:id="@+id/email_edit_text"
                        android:inputType="textEmailAddress"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_width="match_parent"
                        app:inputTextColor="@color/gray_dark_2"
                        app:inputTextSize="14sp"
                        app:labelText="@string/email_2"
                        app:labelTextColor="@color/black"
                        app:labelTextSize="14sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp">


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/positive_button"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"
                android:text="@string/accept_1"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Button.Blue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>