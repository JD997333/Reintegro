                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Ceballos" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/account_number_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1700004044" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/nss_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1700004044" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/curp_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="PECM670820HDFRRB03" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/rfc_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="PECM670820" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_height="match_parent"
                            android:layout_marginLeft="48dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/gender_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/birthday_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/street_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/neighborhood_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/town_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/states_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/postal_code_1"
                                android:textSize="12sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="48dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/sex_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Femenino" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/birthday_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="20/07/1944" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/street_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Rio Tuxpan Mz 76 LT 18" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/neighborhood_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Valle de San Lorenzo" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/town_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Tuxtla" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/federal_entity_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Chiapas" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/postal_code_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="06350" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:background="@color/gray_light_2"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center_vertical"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:text="@string/associated_minors_1"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <com.reintegro.profuturo.app.android.widget.RecyclerView
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            tools:listitem="@layout/item_associated_minor" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@color/gray_light_2"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:weightSum="4">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/cell_phone_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/phone_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/email_1"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:text="@string/email_1"
                                android:textSize="12sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/cell_phone_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="55 6789 0987" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/phone_text_view"
                                android:layout_height="32dp"
                                android:layout_width="match_parent"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1234 5678" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:gravity="center_vertical"
                                android:id="@+id/email_1_text_view"
