<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_background_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Orange">
        <item name="android:background">@drawable/selector_background_button_orange</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/selector_background_button_white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Button.White.Borderless">
        <item name="android:background">@drawable/selector_background_button_white_borderless</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SimpleAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

</resources>
